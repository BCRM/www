{% import "BCRMWebBundle::macros.html.twig" as pagemacro %}
{% set default_title = "BarCamp RheinMain | " ~ barcamp_title %}
{% set default_description = barcamp_description %}
{% set default_image %}{{ scheme_and_host }}/bundles/bcrmweb/images/bcrm.jpg{% endset %}
<!DOCTYPE html><!--[if lt IE 7]>
<html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]--><!--[if IE 7]>
<html class="no-js lt-ie9 lt-ie8"> <![endif]--><!--[if IE 8]>
<html class="no-js lt-ie9"> <![endif]--><!--[if gt IE 8]><!-->
<html class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ title|default(default_title) }}</title>
    <meta name="description" content="{{ description|default(default_description) }}">
    <meta name="viewport" content="width=device-width">

    {# Twitter card #}
    <meta name="twitter:card"        content="summary">
    <meta name="twitter:site"        content="@bc_rm">
    <meta name="twitter:title"       content="{{ title|default(default_title) }}">
    <meta name="twitter:description" content="{{ description|default(default_description) }}">
    <meta name="twitter:image:src"   content="{{ image|default(default_image) }}">

    {# Facebook OpenGraph Data #}
    <meta property="og:type"                  content="event">
    <meta property="event:start_time"         content="{{ barcamp_start_time|date('Y-m-d\\TH:i:sP') }}">
    <meta property="event:end_time"           content="{{ barcamp_end_time|date('Y-m-d\\TH:i:sP') }}">
    <meta property="og:url"                   content="{{ scheme_and_host }}" >
    <meta property="og:title"                 content="{{ default_title }}" >
    <meta property="og:description"           content="{{ default_description }}" >
    <meta property="og:image"                 content="{{ default_image }}" >
    <meta property="event:creator"            content="233370660009977" >
    {% if barcamp_location_latitude %}
    <meta property="event:location:latitude"  content="{{ barcamp_location_latitude }}" >
    <meta property="event:location:longitude" content="{{ barcamp_location_longitude }}" >
    {% endif %}

    {% stylesheets filter="yui_css,cssrewrite"
    "bundles/bcrmweb/vendor/h5bp/normalize.css"
    "bundles/bcrmweb/vendor/h5bp/main.css"
    "bundles/bcrmweb/css/styles.scss"
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
    {% endstylesheets %}

    {% javascripts filter="yui_js"
    "bundles/bcrmweb/vendor/modernizr/modernizr-2.6.2-with-respond.min.js"
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <!-- favicons, generated with http://www.favicomatic.com/ -->
    <link rel="shortcut icon" href="/bundles/bcrmweb/images/favicons/favicon.ico?{{ assets_version }}" />
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="/bundles/bcrmweb/images/favicons/apple-touch-icon-57x57.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/bundles/bcrmweb/images/favicons/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/bundles/bcrmweb/images/favicons/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/bundles/bcrmweb/images/favicons/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon-precomposed" sizes="60x60" href="/bundles/bcrmweb/images/favicons/apple-touch-icon-60x60.png" />
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/bundles/bcrmweb/images/favicons/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon-precomposed" sizes="76x76" href="/bundles/bcrmweb/images/favicons/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/bundles/bcrmweb/images/favicons/apple-touch-icon-152x152.png" />
    <link rel="icon" type="image/png" href="/bundles/bcrmweb/images/favicons/favicon-196x196.png" sizes="196x196" />
    <link rel="icon" type="image/png" href="/bundles/bcrmweb/images/favicons/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/png" href="/bundles/bcrmweb/images/favicons/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/bundles/bcrmweb/images/favicons/favicon-16x16.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="/bundles/bcrmweb/images/favicons/favicon-128.png" sizes="128x128" />
    <meta name="application-name" content="{{ default_title }}"/>
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="/bundles/bcrmweb/images/favicons/mstile-144x144.png" />
    <meta name="msapplication-square70x70logo" content="/bundles/bcrmweb/images/favicons/mstile-70x70.png" />
    <meta name="msapplication-square150x150logo" content="/bundles/bcrmweb/images/favicons/mstile-150x150.png" />
    <meta name="msapplication-wide310x150logo" content="/bundles/bcrmweb/images/favicons/mstile-310x150.png" />
    <meta name="msapplication-square310x310logo" content="/bundles/bcrmweb/images/favicons/mstile-310x310.png" />
</head>
<body>
<!--[if lt IE 9]><p class="chromeframe">You are using an <strong>outdated</strong> browser. Please
    <a href="http://browsehappy.com/">upgrade your browser</a> or
    <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your
    experience.</p><![endif]-->
<div class="wrapper">
    <header>
        <hr>
        <h1 id="logo">
            <a href="{{ path('bcrmweb_index') }}" rel="index"><img src="{{ asset('bundles/bcrmweb/images/barcamp_logo.png') }}" alt="BarCamp"><span class="region">RheinMain</span><span class="location-date">{{ barcamp_title }}</span></a>
        </h1>
        <nav class="event">
            <a href="{{ path('bcrmweb_index') }}"
                {% if app.request.get('_route') == 'bcrmweb_index' %}class="active"{% endif %}
                    rel="index">Das BarCamp</a>
            <!-- {{ pagemacro.pagelink('Nachlese', 'Nachlese', app.request.get('path')) }} -->
            <!-- <a href="{{ path('bcrmweb_stats') }}" {% if app.request.get('_route') == 'bcrmweb_stats' %}class="active"{% endif %} >Statistiken</a> -->
            {{ pagemacro.pagelink('Location', 'Location', app.request.get('path')) }}
            {{ pagemacro.pagelink('Sponsoren', 'Sponsoren', app.request.get('path')) }}
            <!-- <a href="{{ path('bcrmweb_participant_list') }}">Teilnehmer</a> -->
        </nav>
        <hr>
        <nav class="main">
            {{ pagemacro.pagelink('Kontakt/Index', 'Kontakt', app.request.get('path')) }}
            {{ pagemacro.pagelink('Kontakt/Impressum', 'Impressum', app.request.get('path')) }}
        </nav>
        <hr>
    </header>
    <div class="main">
        {% block visual %}{% endblock visual %}
        <aside>
            {% if page is defined and page.properties.subnav %}
            {% if page.subnav|length > 1 %}
            {% for item in page.subnav %}
            {% if loop.first %}<nav>{% endif %}
                <a href="{{ path('bcrmweb_page', {'path': item.path}) }}"
                    {% if path == item.path %}class="active"{% endif %}
                >{{ item.title }}</a>
            {% if loop.last %}</nav>{% endif %}
            {% endfor %}
            {% endif %}
            {% endif %}

            <a class="twitter-timeline" data-chrome="noborders transparent" href="https://twitter.com/search?q=%23bcrm+OR+%23{{ barcamp_hashtag }}+OR+%40bc_rm+-RT" data-widget-id="{{ twitter_widget_id }}">Tweets zum BarCamp RheinMain</a>
        </aside>

        <article>
        {% block content %}{{ page.content|raw }}{% endblock content %}
        </article>
    </div>
</div>
<footer>
    <div class="inner-wrap">
        <article id="sponsors">
            {{ sponsors.content|raw }}
        </article>
    </div>
</footer>

{% block javascript %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript"></script>
<script src="//widgets.flinc.org/widgets/schedule.js" type="text/javascript"></script>
{% javascripts filter="yui_js"
"bundles/bcrmweb/vendor/h5bp/console.js"
"bundles/bcrmweb/js/main.js"
"bundles/bcrmweb/js/twitter.js"
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock javascript %}
<script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', '{{ google_analytics_account }}']);
    _gaq.push(['_setDomainName', '{{ google_analytics_domain }}']);
    _gaq.push(['_trackPageview']);

    (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

</script>
</body>
</html>
