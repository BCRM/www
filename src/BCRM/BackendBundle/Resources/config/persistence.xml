<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="bcrm.backend.repo.subscription.class">BCRM\BackendBundle\Entity\Newsletter\DoctrineSubscriptionRepository</parameter>
        <parameter key="bcrm.backend.entity.subscription.class">BCRM\BackendBundle\Entity\Newsletter\Subscription</parameter>
    </parameters>
    <services>
    <service id="bcrm.backend.repo.subscription"
             factory-service="doctrine.orm.entity_manager"
             factory-method="getRepository"
             class="%bcrm.backend.repo.subscription.class%">
        <argument>%bcrm.backend.entity.subscription.class%</argument>
    </service>
</services>
</container>
